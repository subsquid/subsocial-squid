{
  "name": "kusama-balances",
  "private": true,
  "scripts": {
    "build": "rm -rf lib && tsc",
    "watch": "yarn chokidar \"src/mappings/**/*\" -c 'yarn build'",
    "init": "node db/init.js",
    "db:migrate": "npx sqd db migrate",
    "db:reset": ". ./scripts/reset-db.sh",
    "schema:reset": ". ./scripts/reset-schema.sh",
    "processor:migrate": "echo skip",
    "processor:start": "node -r dotenv/config lib/processor.js",
    "processor:docker-run": "bash scripts/docker-run.sh",
    "query-node:start": "squid-graphql-server",
    "lint": "npm run lint:prod -- --fix",
    "lint:prod": "eslint . --ext .ts --ignore-path .gitignore --max-warnings 0"
  },
  "dependencies": {
    "@polkadot/util": "^9.4.1",
    "@subsocial/api": "^0.6.10",
    "@subsocial/types": "^0.6.10",
    "@subsocial/utils": "^0.6.10",
    "@subsquid/archive-registry": "^0.0.6",
    "@subsquid/cli": "^0.4.1",
    "@subsquid/graphql-server": "^0.3.0",
    "@subsquid/ss58": "^0.1.0",
    "@subsquid/substrate-processor": "^0.8.0",
    "bn.js": "^5.2.1",
    "chokidar-cli": "^3.0.0",
    "class-validator": "^0.13.2",
    "dayjs": "^1.11.2",
    "dotenv": "^16.0.0",
    "inflected": "^2.1.0",
    "p-throttle": "^5.0.0",
    "pg": "^8.7.3",
    "tslib": "^2.4.0",
    "typeorm": "^0.2.41",
    "yesql": "^5.0.0"
  },
  "devDependencies": {
    "@subsquid/substrate-metadata-explorer": "^0.0.8",
    "@subsquid/substrate-typegen": "^0.4.3",
    "@types/node": "^16.11.27",
    "@types/pg": "^8.6.5",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-type-graphql": "^0.3.2",
    "prettier": "^2.6.2",
    "typescript": "~4.6.2"
  }
}
